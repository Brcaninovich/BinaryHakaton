<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="20dp">

    <LinearLayout
        android:id="@+id/linear_layout_card_v_restorana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/oglas_slika"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:background="@color/black"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/naziv_oglasa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:text="NAZIV ARTIKLA"/>

        <TextView
            android:id="@+id/cijena_oglasa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:layout_marginTop="10dp"
            android:text="CIJENA"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"/>

        <LinearLayout
            android:id="@+id/btn_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="visible">

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="2dp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ukloni_fav_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cornerRadius="10dp"
                android:backgroundTint="@color/black"
                android:text="UKLONI IZ OMILJENIH"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>